<h1 class="sign-in header">Sign In</h1>

<form class="sign-in cred-form " action="<%= session_url %>" method="post">
  <%= auth_token_input %>

  <label class="email label">
    Email
  </label>
  <input class="email field" type="text" name="user[email]" value="">

  <label class="password label">
    Password
  </label>
  <input class="password field" type="password" name="user[password]" value="">

  <input class="submit-button" type="submit" value="Sign In">
</form>
