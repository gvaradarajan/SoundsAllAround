<h1>Sign In</h1>

<form class="sign-in-form" action="<%= session_url %>" method="post">
  <%= auth_token_input %>

  <label class="email-container">
    Email
    <input class="email field" type="text" name="user[email]" value="">
  </label>

  <label>
    Password
    <input class="password field" type="password" name="user[password]" value="">
  </label>

  <input class="submit-button" type="submit" value="Sign In">
</form>
